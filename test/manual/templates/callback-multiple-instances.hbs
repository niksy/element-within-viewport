	$('.block').inViewport({
		threshold: 300,
		success: function ( el ) {
			console.log( el );
		}
	}).html('Plugin initialized');

	$('.block1').inViewport({
		threshold: 1000,
		success: function ( el ) {
			console.log( el );
		}
	}).html('Plugin initialized');

	$('.destroy').on('click', function () {
		$('.block').inViewport('destroy').html('Instance destroyed');
	});

	$('.destroy1').on('click', function () {
		$('.block1').inViewport('destroy').html('Instance destroyed');
	});

</script>

